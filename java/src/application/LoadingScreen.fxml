<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>

<BorderPane id="loadingPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoadingScreenController">
    <center>
        <ImageView id="loadingIcon" fitWidth="150" fitHeight="150" preserveRatio="true" />
        <Label id="loadingLabel" text="Cargando..." />
    </center>
    <stylesheets>
        <URL value="@Loading-screen.css" />
    </stylesheets>
</BorderPane>